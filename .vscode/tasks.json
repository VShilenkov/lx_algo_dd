{
    "version": "0.1.0",
    "windows": {
        "command": "cmd",
        "isShellCommand": true,
        "options": {
            "cwd": "${fileDirname}"
        },
        "args": [
            "/C"
        ],
        "showOutput": "always",
        "tasks": [
            {
                "taskName": "Run Build Task",
                "args": [
                    "g++",
                    "${fileBasename}",
                    "-Wall",
                    "-o",
                    "${fileBasename}.exe"
                ],
                "isBuildCommand": true,
                "suppressTaskName": true,
                "problemMatcher": {
                    "owner": "cpp",
                    "fileLocation": [
                        "relative",
                        "${fileDirname}"
                    ],
                    "pattern": {
                        "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            },
            {
                "taskName": "Run Executable",
                "args": [
                    "${fileBasename}.exe"
                ],
                "suppressTaskName": true
            },
            {
                "taskName": "Run Test Task",
                "args": [
                    "echo",
                    "${fileName}"
                ],
                "suppressTaskName": true
            }
        ]
    }
}